{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}